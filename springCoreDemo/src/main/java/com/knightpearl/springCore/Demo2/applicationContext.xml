<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	
    <!-- Define your beans here -->
    <bean id="bike" class="com.knightpearl.springCore.Demo2.Bike">
    	<property name="name">
    		<value>Suzuki</value>
    	</property>
    	<property name="color" value="Black"/>
    	<property name="price" value="200000"/>
    </bean>
    
    
    <bean id="car" class="com.knightpearl.springCore.Demo2.Car">
    	<constructor-arg index="0" value="Honda"/>
    	<constructor-arg type="String" value="Lime Green"/>
    	<constructor-arg index="2" value="1500000"/>
    </bean>
    


</beans>